  <body>
    <h1>Add a New Robot</h1>
    <div class="add">
      <form action="/add" method="post">
          <label>Username</label>
          <input type="text" placeholder="Username" name="username" required>
          <label>Name</label>
          <input type="text" placeholder="Name" name="name" required>
          <label>Avatar</label>
          <input type="text" placeholder="Avatar" name="avatar" required>
          <label>Email</label>
          <input type="email" placeholder="Email" name="email" required>
          <label>Phone</label>
          <input type="text" placeholder="Phone" name="phone" required>
          <label>Address</label>
          <input type="text" placeholder="Address" name="address" required>
          <label>Job</label>
          <input type="text" placeholder="Job" name="job" required>
          <label>Company</label>
          <input type="text" placeholder="Location" name="company" required>
          <label>University</label>
          <input type="text" placeholder="University" name="university" required>
          <label>Skills</label>
          <input type="text" placeholder="Skills" name="skills" required>
          <button type="submit"><i class="fa fa-plus" aria-hidden="true"></i> Add Robot</button>
      </form>
      <div class="footer">
        <a href="/">Â« Back to directory</a>
      </div>
    </div>



